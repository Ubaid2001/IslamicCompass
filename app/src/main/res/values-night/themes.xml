
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.IslamicCompass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimary</item>
>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkSecondary</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkPrimary</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorOnBackground">@color/darkPrimary</item>
